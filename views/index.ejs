<h1>Items (shared volume)</h1>

<form method="POST" action="/item/add">
    <label>
        Name
        <input type="text" name='name' />
    </label>
    <button type='submit'>Save</button>
</form>

<ul>

        <% items.forEach(function(item) { %>
              <li>
                  <%= item.name %> <a href="/delete?id=<%= item._id %>">Delete</a>
              </li>
        <% }) %>


</ul>